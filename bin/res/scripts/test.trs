function init
{
	this.speed = 1;
	execute "setWeapon-Eutihey-sticky_blade";
	this.init = 1;
}

function main
{
	if (this.init == 0) init null;
	this.x1 = this.posX; this.y1 = this.posY; this.x2 = camOwner.posX; this.y2 = camOwner.posY; this.dist = math.dist;
	this.dx = 0;
	if (this.dist < 300) walk null;
}

function walk
{
	if (this.posX > camOwner.posX) right null;
	if (this.posX < camOwner.posX) left null;
}

function left { this.dx = -1; }
function right { this.dx = 1; }